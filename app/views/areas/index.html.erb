<div class="flex flex-col items-center h-screen">
  <div class="w-1/3">
    <div class="flex items-center mb-4">
      <h1 class="text-3xl">Areas</h1>
      <div class="ml-auto">
        <%= link_to new_area_path do %>
          <button type="button" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded">
            New area
          </button>
        <% end %>
      </div>
    </div>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Home</li>
      </ol>
    </nav>

    <% @areas.each do |area| %>
      <p class="mb-2"><%= link_to area["key"], area_squares_path(area["key"]), class: "text-blue-600 hover:underline" %></p>
    <% end %>
  </div>
</div>
