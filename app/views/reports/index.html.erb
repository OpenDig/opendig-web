<div class="container mx-auto">
  <% @seasons.each do |season| %>
    <div class="mb-8">
      <h1 class="text-2xl font-bold"><%= season %></h1>
      <div class="flex flex-wrap">
        <% @report_types.each do |report, report_key| %>
          <div class="w-full md:w-1/2 lg:w-1/3 xl:w-1/4 p-2">
            <div class="bg-gray-100 p-4 rounded-lg shadow">
              <h2 class="text-xl font-semibold mb-4"><%= report %> Report</h2>
              <ul class="space-y-2">
                <li>
                  <%= link_to 'Preview Report', report_path(id: season, report_type: report_key), class: "btn btn-primary" %>
                </li>
                <li>
                  <%= link_to 'Download Report', report_path(id: season, report_type: report_key, format: :pdf), class: "btn btn-secondary" %>
                </li>
              </ul>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
